{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["node", "vite/client"],
    "skipLibCheck": true
  },
  "include": [
    "vite.config.*",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "cypress",
    "cypress.config.ts",
    "node_modules"
  ]
}